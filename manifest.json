{
    "name": "Sticky Notes Everywhere",
    "version": "1",
    "manifest_version": 2,
    "description": "Place sticky notes in any page",
    "homepage_url": "http://stickynoteseverywhere.com",
    // "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons": {
        "16": "icons/icon19.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/lodash-4.17.5.min.js",
            // "js/lokijs.min.js",
            // "js/loki-indexed-adapter.min.js",
            "background.js"
        ],
        "persistent": true
    },
    "options_page": "src/options_custom/index.html",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Actions",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
        "icons/icon19.png"
    ],
    "content_scripts": [{
        "matches": [
            //"https://css-tricks.com/adsfasdf"
            "<all_urls>"
        ],
        "css": [
            "css/content.css"
        ],
        "js": [
            "js/zepto-1.2.0.min.js",
            "js/lodash-4.17.5.min.js",
            "js/interact-1.2.9.min.js",
            "js/moment-2.22.0.min.js",
            "js/misc.js",
            "content.js"
        ]
        , "run_at": "document_end"
    }]
}